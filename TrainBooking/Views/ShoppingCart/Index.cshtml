@model TrainBooking.ViewModels.ShoppingCartVM

@{
    ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>

@if (Model != null)
{

    <form asp-action="Payment">
        <table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cart[0].DepartureDate)</th>
                @*<th>@Html.DisplayNameFor(model => model.Cart[0].Sections.FirstOrDefault().DepartureStation)</th>
                <th>@Html.DisplayNameFor(model => model.Cart[0].Sections.FirstOrDefault().DestinationStation)</th>
                <th>@Html.DisplayNameFor(model => model.Cart[0].Sections.FirstOrDefault().DepartureTime)</th>
            <th>@Html.DisplayNameFor(model => model.Cart[0].Sections.FirstOrDefault().ArrivalTime)</th>*@
                <th>@Html.DisplayNameFor(model => model.Cart[0].Class)</th>
                <th>@Html.DisplayNameFor(model => model.Cart[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model.Cart[0].SeatNumber)</th>
                
            </tr>
            @{
                float total = 0;
            }
            @for (var i = 0; i < Model.Cart.Count; i++)
            {

                <tr>
                    @Html.HiddenFor(m => Model.Cart[i].Id)
                    <td><input asp-for="@Model.Cart[i].DepartureDate" class="form-control" /></td>
                    @*<td>@Model.Cart[i].Sections.FirstOrDefault().DepartureStation</td>
                    <td>@Model.Cart[i].Sections.FirstOrDefault().DestinationStation</td>
                    <td>@Model.Cart[i].Sections.FirstOrDefault().DepartureTime</td>
            <td>@Model.Cart[i].Sections.FirstOrDefault().ArrivalTime</td>*@
                    <td><input asp-for="@Model.Cart[i].Class" readonly="readonly" class="form-control" data-aantal=@i/></td>
                    <td><input asp-for="@Model.Cart[i].Price" readonly="readonly" class="form-control" /></td>
                    <td><input asp-for="@Model.Cart[i].SeatNumber" type="number" min="1" max="100" class="form-control" /></td>
                    
                    @*<td>@Model.Cart[i].Sections.FirstOrDefault().DepartureStation</td>
                    <td>@Model.Cart[i].Sections.LastOrDefault().DestinationStation</td>
                    <td>@Model.Cart[i].Sections.LastOrDefault().DepartureTime</td>
                    <td>@Model.Cart[i].Sections.LastOrDefault().ArrivalTime</td>
                    <td>@Model.Cart[i].Class</td>
                    <td>@Model.Cart[i].Price</td>*@
                    <td>
                        <a asp-action="Delete" asp-route-id="@Model.Cart[i].Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <input type="submit" value="Checkout"
                       class="btn btn-default" />
                </td>
            </tr>
            <tr>

                <td id="cart-total">
                    Total  <input id="txtTotal" value="@total"
                                  type="number" readonly="readonly" />
                </td>
            </tr>

        </table>
    </form>
}
else
{
    @Html.Raw("Your shoppingcart is empty at the moment")
}